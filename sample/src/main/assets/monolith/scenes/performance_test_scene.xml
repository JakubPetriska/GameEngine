<?xml version="1.0" encoding="UTF-8"?>
<scene>
    <gameObjects>
        <!-- FPS counter and reporter -->
        <gameObject>
            <components>
                <component type="com.monolith.showcase.engine.FpsReporter"/>
            </components>
        </gameObject>

        <!-- Camera -->
        <gameObject>
            <transform>
                <position x="0" y="1" z="0" />
            </transform>
            <components>
                <component type="camera">
                    <param name="fieldOfView">70</param>
                </component>
                <component type="com.monolith.showcase.engine.TouchRotationController" />
                <component type="com.monolith.showcase.engine.SimpleMovementController" />
            </components>
        </gameObject>

        <!-- Cubes -->
        <gameObject>
            <components>
                <component type="com.monolith.showcase.engine.CubesGenerator">
                    <param name="cubeLayerCount">6</param>
                </component>
            </components>
        </gameObject>
    </gameObjects>
</scene>